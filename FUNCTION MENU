#include <iostream>
#include <string>
#include <sstream>
#include <iomanip>
#include <cstdlib>
#include <ctime>

using namespace std;

// Function 1: Decimal to Binary
string decimalToBinary(int n) {
    string binary = "";
    if (n == 0) return "0";
    while (n > 0) {
        binary = to_string(n % 2) + binary;
        n /= 2;
    }
    return binary;
}

// Function 2: Binary to Decimal
int binaryToDecimal(string binary) {
    int decimal = 0;
    for (size_t i = 0; i < binary.size(); ++i) {
        if (binary[binary.size() - i - 1] == '1') {
            decimal += (1 << i);
        }
    }
    return decimal;
}

// Function 3: Decimal to Hexadecimal
string decimalToHex(int n) {
    stringstream ss;
    ss << uppercase << hex << n;
    return ss.str();
}

// Function 4: Hexadecimal to Decimal
int hexToDecimal(string hexStr) {
    int decimal;
    stringstream ss;
    ss << hex << hexStr;
    ss >> decimal;
    return decimal;
}

void displayMenu() {
    cout << " Conversion Menu: ";
    cout << "1. Convert Decimal to Binary ";
    cout << "2. Convert Binary to Decimal ";
    cout << "3. Convert Hexadecimal to Decimal ";
    cout << "4. Convert Decimal to Hexadecimal ";
    cout << "5. Demo (Generate and convert random integers to binary) ";
    cout << "6. Exit ";
}

int main() {
    int choice;
    srand(static_cast<unsigned int>(time(0))); // Seed for random numbers

    do {
        displayMenu();
        cout << "Enter your choice (1-6): ";
        cin >> choice;

        if (choice == 1) {
            int dec;
            cout << "Enter a decimal number: ";
            cin >> dec;
            cout << "Binary representation: " << decimalToBinary(dec) << endl;
        }
        else if (choice == 2) {
            string bin;
            cout << "Enter a binary number: ";
            cin >> bin;
            cout << "Decimal representation: " << binaryToDecimal(bin) << endl;
        }
        else if (choice == 3) {
            string hexNum;
            cout << "Enter a hexadecimal number: ";
            cin >> hexNum;
            cout << "Decimal representation: " << hexToDecimal(hexNum) << endl;
        }
        else if (choice == 4) {
            int dec;
            cout << "Enter a decimal number: ";
            cin >> dec;
            cout << "Hexadecimal representation: " << decimalToHex(dec) << endl;
        }
        else if (choice == 5) {
            int randomNum = rand() % 100; // 0 to 99
            cout << "Generated random integer: " << randomNum << endl;
            cout << "Binary representation: " << decimalToBinary(randomNum) << endl;
        }
        else if (choice == 6) {
            cout << "Exiting the program. ";
        }
        else {
            cout << "Invalid choice! Please select 1-6. ";
        }

    } while (choice != 6);

    return 0;
}
